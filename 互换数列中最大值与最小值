#include  <stdio.h>
#define ARR_SIZE 10
int n, a[ARR_SIZE];
void  MaxMinExchang(int a[], int n);
int main()
{
	int i;
	printf("Input n(n<=10):\n");
	scanf("%d", &n);
	printf("Input %d Numbers:\n", n);
	for (i = 0; i < n; i++)
	{
		scanf("%d", &a[i]);
	}
	MaxMinExchang(a, n);
	printf("After MaxMinExchange:\n");
	for (i = 0; i < n; i++)
	{
		printf("%d ", a[i]);
	}
	printf("\n");
	return 0;
}
void  MaxMinExchang(int a[], int n)
{
	int  maxValue = a[0], minValue = a[0];
	int maxPos = 0, minPos = 0;
	int  i, temp;
	for (i = 0; i < n; i++)
	{
		if (a[i] > maxValue)
		{
			maxValue = a[i];
			maxPos = i;
		}
		if (a[i] < minValue)
		{
			minValue = a[i];
			minPos = i;
		}
	}
	temp = a[maxPos];
	a[maxPos] = a[minPos];
	a[minPos] = temp;
}
